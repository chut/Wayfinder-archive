<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/titlefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_weight=".60"
                android:gravity="center_vertical|center"
                android:padding="0dp"
                android:text="MGH-Nav"
                android:textSize="40sp"
                android:typeface="monospace" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_weight=".40"
                android:contentDescription="MGH Logo"
                android:padding="5dp"
                android:src="@drawable/mgh" />
        </TableRow>

        <TableRow
            android:id="@+id/fillerRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="35dp" >
            </View>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/startBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="Start: "
                android:textColor="#FFFFFFFF"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/startText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text=""
                android:textColor="#FF000000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/scanStartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Scan" />

            <Button
                android:id="@+id/listStartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="List" />
        </TableRow>

        <TableRow
            android:id="@+id/FillerRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="35dp" >
            </View>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/endBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:text="End: "
                android:textColor="#FFFFFFFF"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/endText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text=""
                android:textColor="#FF000000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/listEndButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="List" />
        </TableRow>

        <TableRow
            android:id="@+id/fillerRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="35dp" >
            </View>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <!-- Go Button -->

            <Button
                android:id="@+id/goButton"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:padding="2dp"
                android:text="Go!" />
        </TableRow>
    </TableLayout>

</ScrollView>