<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mgh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CALL_PHONE" />
    
    
    <application
        android:icon="@drawable/mgh"
        android:label="@string/app_name" android:allowTaskReparenting="false" android:killAfterRestore="true">
        <activity
            android:name=".MghActivity"
            android:label="@string/app_name"
            android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ListSelectActivity" >
        </activity>
        <activity android:name="RoomSelectActivity" >
        </activity>
        <activity android:name="mapActivity" android:screenOrientation="landscape" android:configChanges="orientation"></activity>
        <activity android:name=".PreferencesActivity" android:label="settings" />
        <activity android:name="helpActivity"></activity>

    </application>

</manifest>